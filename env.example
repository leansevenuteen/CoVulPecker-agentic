# Example .env configuration for CoVulPecker
# Copy this file to .env and update with your settings

# =============================================================================
# LLM API Configuration
# =============================================================================
# Your LLM API endpoint (OpenAI-compatible format)
LLM_API_BASE_URL=https://778871a874da.ngrok-free.app/v1

# Model name to use
LLM_MODEL_NAME=Qwen/Qwen2.5-7B-Instruct-AWQ

# API key (use "not-needed" for self-hosted without auth)
LLM_API_KEY=not-needed

# =============================================================================
# Deep Learning Classifier Configuration (Optional)
# =============================================================================
# Path to your trained CausalGAT model (.pt file)
# Leave empty to use placeholder mode (auto-label as vulnerable)
DL_MODEL_PATH=

# Device for inference: cuda, cpu, or auto
DL_DEVICE=auto

# Model architecture parameters (must match training configuration)
DL_NUM_FEATURES=200
DL_TOKENS_DIM=768
DL_HIDDEN_DIM=256
DL_NUM_CONV_LAYERS=3
DL_FUSION_MODE=cross_atten
DL_HEAD=8
DL_DROPOUT=0.3

# =============================================================================
# Code Embedding Configuration (Optional - for future implementation)
# =============================================================================
# Path to Joern installation for CPG extraction
JOERN_PATH=

# CodeT5 model for token embeddings
CODET5_MODEL=Salesforce/codet5-base

# Node2Vec embedding dimension
NODE2VEC_DIM=200

